<odoo>

    <!-- Error Logs Tree View -->
    <record id="view_error_tree" model="ir.ui.view">
        <field name="name">error.tree</field>
        <field name="model">error_log.error</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stacktrace"/>
                <field name="error_type"/>
                <field name="assigned"/>
                <field name="is_ok"/>
                <field name="create_date"/>
                <field name="create_uid" widget="many2one_avatar_user"/>
            </tree>
        </field>
    </record>

    <!-- Animal Form View -->
    <record id="view_error_form" model="ir.ui.view">
        <field name="name">error.form</field>
        <field name="model">error_log.error</field>
        <field name="arch" type="xml">
            <form string="Error Logs">
                <field name="active" invisible="1"/>
                <sheet>
                    <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <h1>
                            <field name="stacktrace"/>
                        </h1>
                        <field
                                name="error_type"
                                widget="radio"
                                options="{'horizontal': true}"
                        />
                    </div>
                    <group id="main">
                        <group id="left">
                            <field name="assigned"/>
                            <field name="comment"/>
                        </group>
                        <group id="right">
                            <field name="is_ok"/>
                            <field name="tags" widget="many2many_tags"  />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search for error -->
    <record id="view_error_search" model="ir.ui.view">
        <field name="name">error.search</field>
        <field name="model">error_log.error</field>
        <field name="arch" type="xml">
            <search string="Error Logs">
                <field
                        name="stacktrace"
                        filter_domain="[('name', 'ilike', self)]"
                        string="Name"
                />
                <field name="assigned"/>
                <field name="is_ok"/>
                <field name="comment"/>
                <separator/>
                <filter
                        string="Xml"
                        domain="[('error_type', '=', 'xml')]"
                        name="xml"
                />
                <filter
                        string="Python"
                        domain="[('error_type', '=', 'python')]"
                        name="python"
                />
                <filter
                        string="Javascript"
                        domain="[('error_type', '=', 'javascript')]"
                        name="javascript"
                />
                <filter
                        string="Atama"
                        domain="[('error_type', '=', 'atama')]"
                        name="atama"
                />
                <separator/>
                <filter
                        string="Archived"
                        name="inactive"
                        domain="[('active', '=', False)]"
                />
                <separator/>
                <group expand="0" string="Group By">
                    <filter
                            name="error_type"
                            string="Error Type"
                            domain=""
                            context="{'group_by': 'error_type'}"
                    />

                </group>
            </search>
        </field>
    </record>

    <record id="action_error" model="ir.actions.act_window">
        <field name="name">Error Logs</field>
        <field name="res_model">error_log.error</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_error_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create an Error Log</p>
        </field>
    </record>

</odoo>
