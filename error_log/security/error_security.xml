            <field name="name">User</field>
            <field name="category_id"
                   ref="base.module_category_services_error"/>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="error_tags_group_user" model="res.groups">
            <field name="name">user_tags</field>
            <field name="category_id"
                   ref="base.module_category_services_error"/>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>